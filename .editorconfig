charset = utf-8-bom
indent_style = space
tab_width = 2
indent_size = 2

[*.gd]
charset = utf-8-bom
indent_style = space
tab_width = 4
indent_size = 4

[*.nav]
charset = utf-8-bom
indent_style = space
tab_width = 4
indent_size = 4

[*.sql]
charset = utf-8-bom
indent_style = space
tab_width = 4
indent_size = 4

[*.stg]
charset = utf-8-bom
indent_style = space
tab_width = 4
indent_size = 4

[*.props]
charset = utf-8-bom
indent_style = space
tab_width = 2
indent_size = 2

[*.targets]
charset = utf-8-bom
indent_style = space
tab_width = 2
indent_size = 2

[*.{appxmanifest,axml,build,c,c++,c++m,cc,ccm,cginc,compute,config,cp,cpp,cppm,csproj,cu,cuh,cxx,cxxm,dbml,discomap,dtd,fx,fxh,h,hh,hlsl,hlsli,hlslinc,hpp,hxx,inc,inl,ino,ipp,ixx,jsproj,lsproj,mpp,mq4,mq5,mqh,mxx,njsproj,nuspec,proj,props,resw,resx,StyleCop,targets,tasks,tpp,usf,ush,vbproj,xml,xsd}]
indent_style = tab
indent_size = tab
tab_width = 4

[*.{asax,ascx,aspx,axaml,cs,cshtml,css,htm,html,master,paml,razor,skin,vb,xaml,xamlx,xoml}]
